generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidato {
  id         Int          @id @default(autoincrement())
  nome       String       @db.VarChar(255)
  email      String
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt

  @@map("candidato")
}

model Recrutador {
  id           Int       @id @default(autoincrement())
  nome         String
  email        String
  senha        String
  id_candidato Int
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  @@map("recrutador")
}
